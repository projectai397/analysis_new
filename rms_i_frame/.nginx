server {
    server_name support.500x.exchange;

    # Common proxy headers
    proxy_set_header Host              $host;
    proxy_set_header X-Real-IP         $remote_addr;
    proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto http;

    client_max_body_size 50m;

    # Everything goes to frontend (3009)
    location / {
        proxy_pass http://127.0.0.1:3009;
        proxy_http_version 1.1;

        # Safe even if not using websockets
        proxy_set_header Upgrade    $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/support.500x.exchange/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/support.500x.exchange/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = support.500x.exchange) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name support.500x.exchange;
    return 404; # managed by Certbot


}
