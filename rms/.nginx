# =========================
# HTTP -> HTTPS redirect
# =========================
server {
    listen 80;
    server_name rms.500x.exchange;
    return 301 https://$host$request_uri;
}

# =========================
# HTTPS (ALL traffic -> 8013)
# =========================
server {
    listen 443 ssl http2;
    server_name rms.500x.exchange;

    # -------------------------
    # SSL (Certbot)
    # -------------------------
    ssl_certificate     /etc/letsencrypt/live/rms.500x.exchange/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/rms.500x.exchange/privkey.pem;
    include             /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam         /etc/letsencrypt/ssl-dhparams.pem;

    # -------------------------
    # Common proxy headers
    # -------------------------
    proxy_set_header Host              $host;
    proxy_set_header X-Real-IP         $remote_addr;
    proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    client_max_body_size 50m;

    # -------------------------
    # WebSocket (and normal HTTP) -> 8013
    # -------------------------
    location / {
        proxy_pass http://127.0.0.1:8013;

        proxy_http_version 1.1;

        # Enable WS upgrade for any route (safe even for normal HTTP)
        proxy_set_header Upgrade    $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }
}
